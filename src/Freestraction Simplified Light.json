		"highlighted": {
		"regex": "(::)([^:]{1,})(::)",
		"matchPosition": 2,
		"isRevealOnCursorRange": true,
		"color":"656565",
		"backgroundColor": "#fff9ca"
		},
		"highlighted-left-colon": {
		"regex": "(::)([^:]{1,})(::)",
		"matchPosition": 1,
		"isMarkdownCharacter": true,
		"isHiddenWithoutCursor": true,
		"isRevealOnCursorRange": true,
		"color": "#dbc831"
		},
		"highlighted-right-colon": {
		"regex": "(::)([^:]{1,})(::)",
		"matchPosition": 3,
		"isMarkdownCharacter": true,
		"isHiddenWithoutCursor": true,
		"isRevealOnCursorRange": true,
		"color": "#dbc831"
		},
		 "code-left-backtick": {
            "color": "#009155"
        },
        
        "code-right-backtick": {
            "color": "#009155"
        },
            "strikethrough": {
            "regex": "(~~)([^~]{1,})(~~)",
            "matchPosition": 2,
            "strikethroughStyle": 1,
            "color": "#009bc9",
            "isRevealOnCursorRange": true
        },

        "strikethrough-left-tilde": {
            "regex": "(~~)([^~]{1,})(~~)",
            "matchPosition": 1,
            "isMarkdownCharacter": true,
            "isHiddenWithoutCursor": true,
            "color": "#afdae8",
            "isRevealOnCursorRange": true
        },

        "strikethrough-right-tilde": {
            "regex": "(~~)([^~]{1,})(~~)",
            "matchPosition": 3,
            "isMarkdownCharacter": true,
            "color": "#afdae8",
            "isHiddenWithoutCursor": true,
            "isRevealOnCursorRange": true
        }
    }
}
